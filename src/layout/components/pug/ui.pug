mixin social-list
	ul.social 
		li.social-item
			a.social__link(href="#") 
				+instagram-icon
		li.social-item
			a.social__link(href="#") 
				+vk-icon
		li.social-item
			a.social__link(href="#") 
				+tiktok-icon

mixin breadcrumbs
	section.breadcrumbs
		.container
			ul.list
				li.list-item
					a.list__link(href="/") 
						+house-icon
						span На главную
				li.list-item
					a.list__link(href="contact.html") 
						span Контактная информация

mixin btn-more
	ul.actions
		li.actions-item
			a.btn.btn_dark(href="") Загрузить еще




